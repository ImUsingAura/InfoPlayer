package eu.imusingaura.info;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.plugin.java.JavaPlugin;

public class Core extends JavaPlugin {

    static org.bukkit.plugin.PluginManager manager;
    static JavaPlugin instance;

    public void onEnable() {
        instance = this;
        manager = Bukkit.getPluginManager();
    }

    public static void registerEvent(Inventories inv) {
        manager.registerEvents(inv, instance);
    }

    public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
        Player p = (Player)sender;
        if(p.hasPermission("info.use")) {
            if (cmd.getName().equalsIgnoreCase("playerinfo")) {
                Commands.process(sender, args);
            }
        } else {
            p.sendMessage("§8[§5BornInfo§8] §7Non hai il §5permesso!");
        }
        return true;
    }
}
